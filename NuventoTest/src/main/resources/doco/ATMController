Object ATMController

    ATMEngine.intialiseATM

    ATMDisplay.login
    INPUT userIDInput
    ATMEngine.userLogin(userIDInput)


    ATMDisplay.displayMenu(ATMEngine.currentUser.getName)
    INPUT userOptionInput

    CASE userOption of
        1:
            CALL FUNCTION ATMDisplay.displayAccountSelect("Deposit too", ATMEngine.currentChequeAccount.getAccountNumber, ATMEngine.currentChequeAccount.getAccountNumber )
            INPUT userSelectedAccount
            CALL FUNCTION ATMDisplay.displayDeposit()
            INPUT userDepositInput
            CALL FUNCTION ATMEngine.depositMoney(userDepositInput, userSelectedAccount)
        2:
            CALL FUNCTION ATMDisplay.displayAccountSelect("Withdraw From", ATMEngine.currentChequeAccount.getAccountNumber, ATMEngine.currentChequeAccount.getAccountNumber)
            INPUT userSelectedAccount
            ATMDisplay.displayWithdraw(ATMEngine.getAccTypeBalance(userSelectedAccount))
            INPUT userWithdrawInput
            ATMEngine.deposit(userWithdrawInput, userSelectedAccount)
        3:
            ATMDisplay.displayBalance(ATMEngine.checkBalance())
        4:
            quitApp()
        ELSE SOME SORT OF ERROR CHECK


